<% layout('layouts/boilerplate') %>


<h1>add admin</h1>
    
    <ul>
        <% for (let user of users){%>
            <% if (user.role==='teacher') { %>
                <li><a href="/teachers/<%= user._id %>"><%= user.name %></a></li>
            <% } else { %>
                <li><a href="/students/<%= user._id %>"><%= user.name %></a></li>
            <% } %> 
            <form action="/admins/<%= user._id %>" method="post"><button>add admin</button></form>
        <% }%>
    </ul>